= form_for @entry do |f|

  - if @entry.errors.any?
    #error_explanation
      .alert.alert-error
        = t('views.form_errors')
        %ul
          - @entry.errors.full_messages.each do |msg|
            %li= msg

  = f.label :message, t('views.message')
  = f.text_area :message

  = f.hidden_field :inquiry_id, :value => @inquiry.id

  .buttons
    = f.submit t('views.submit')


