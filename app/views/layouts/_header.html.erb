<div id="header">
  <% if @admin_status %>
      <div id="admin_panel"><%= link_to 'Ticket Center', ticket_center_path, id: 'ticket_path' %></div>
  <% end %>
  <!--<div id="langselect"><%= link_to_unless I18n.locale == :es, "EspaÃ±ol", locale: :es %> | <%= link_to_unless I18n.locale == :en, "English", locale: :en %></div>-->
  <div id="signup"><%= link_to image_tag("registrate.png"), register_path unless @current_user %></div>
  <%= link_to image_tag("mainlogo.png"), root_path, id: 'logo' %>
  <div id="topmenu">
    <ul id="topleft">
      <li id="support"><%= link_to support_path do %><%= image_tag(asset_path("icons/support.png"), class: 'icon' ) %><%= t('views.help') %><% end %></li>
      <li id="community"><%= link_to community_path do %><%= image_tag(asset_path("icons/community.png"), class: 'icon' ) %><%= t('views.community') %><% end %></li>
    </ul>
    <div id="topright">
      <% if @current_user %>
        <%= link_to sign_out_path, class: "logout" do %><span><%= t('views.sign_out') %></span><%= image_tag(asset_path("bg/logout.png"))%><% end %>
        <div style="position: relative;">
            <div id="tagarrow"><%= image_tag(asset_path("icons/arrow.png")) %></div>
            <%= link_to account_path, id: "usertag" do %><span><%= @current_user.username %></span><% end %>
            <ul id="tagmenu">
              <%= nav_link t('views.my_account'), account_path %>
              <%= nav_link t('views.cashier'), cashier_path %>
            </ul>
        </div>
      <% else %>
        <%= render 'sessions/top_sign_in_form' %>
      <% end %>
    </div>
  </div>

  <ul id="mainmenu">
      <%= nav_link t('views.home'), root_path, 'home' %>
      <%= nav_link t('views.sportsbook'), sportsbook_path, 'sportsbook' %>
      <%= nav_link t('views.racebook'), racebook_path, 'racebook' %>
      <%= nav_link t('views.lottery'), lottery_path, 'lottery' %>
    <ul id="social">
      <li><%= link_to image_tag("social/facebook.png"), "https://www.facebook.com/LaFundaRD", target: '_blank' %></li>
      <li><%= link_to image_tag("social/twitter.png"), "https://twitter.com/lafundard", target: '_blank' %></li>
    </ul>

  </ul>

</div>
