%h1 Ticket ##{@inquiry.id}

%h3= @inquiry.subject

%table
  %tr
    %td= t('views.date')
    %td= t('views.status')
    %td= t('views.last_update')
  %tr
    %td= @inquiry.created_at.strftime("%d/%m/%Y")
    %td.status= get_status(@inquiry.status)
    %td= @inquiry.updated_at.strftime("%d/%m/%Y %H:%M:%S")


%p= @inquiry.message


= form_for @entry do |f|

  = f.label :message, t('views.message')
  = f.text_area :message

  = f.hidden_field :inquiry_id, :value => @inquiry.id

  .buttons
    = f.submit t('views.submit')

