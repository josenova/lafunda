<%= form_tag sessions_path do %>
    <%= label :username, t('views.username') %>
    <%= text_field_tag :username, params[:username], :required => true, :autofocus => true %>

    <%= label :password, t('views.password') %>
    <%= password_field_tag :password, nil, :required => true %>

    <%= submit_tag t('views.log_in') %>
<% end %>
