<%= form_tag sessions_path do %>
    <%= text_field_tag :username, params[:username], :required => true, :placeholder => t('views.username') %>
    <%= password_field_tag :password, nil, :required => true, :placeholder => t('views.password')  %>

    <%= hidden_field_tag :redirect_url, @current_url %>

    <%= submit_tag t('views.log_in') %>
<% end %>
