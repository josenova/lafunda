<h1><%= t('views.my_account') %></h1>
<h3><%= t('views.welcome') + ', ' + @current_user.name %></h3>


<div id="controlpanel">
  <%= link_to edit_account_path do %><%= image_tag(asset_path("controlpanel/edit-profile.png")) %><span><%= t('views.edit_profile') %></span><% end %>
</div>





<% content_for :modules do %>
    <div id="balance">
      <span>Balance:</span>
      <p>RD$<%= @current_user_funds %></p>
      <%= link_to t('views.deposit'), '#', id: 'deposit' %>
      <%= link_to t('views.withdraw'), '#',id: 'withdraw' %>
    </div>
<% end %>